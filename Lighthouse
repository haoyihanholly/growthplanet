<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title></title>
	</head>
	<body>
		<h2>Lighthouse - study plan</h2>
		<h3>Targeted learning plan based on AI feedback on homework errors and user provided learning progress</h3>
		<img src="img/成长星球4.jpg" alt="the photo is broken" width="1080" height="508" />
		<form>
			<font size="5">

				<label for="learningStage">选择学习阶段：</label>
				<select id="learningStage" name="learningStage">
					<option value="学龄前">学龄前</option>
					<option value="小学">小学</option>
					<option value="初中">初中</option>
					<option value="高中">高中</option>
					<option value="大学">大学</option>
				</select>
				<label for="grade">选择年级：</label>
				<select id="grade" name="grade">
				</select>
		</form>
		<script>
			const learningStageSelect = document.getElementById('learningStage');
			const gradeSelect = document.getElementById('grade');

			learningStageSelect.addEventListener('change', function() {
				const selectedStage = this.value;
				gradeSelect.innerHTML = ''; // 清空年级选择框

				if (selectedStage === '学龄前') {
					const option = document.createElement('option');
					option.value = '学龄前';
					option.textContent = '学龄前';
					gradeSelect.appendChild(option);
				} else if (selectedStage === '小学') {
					const grades = ['一年级', '二年级', '三年级', '四年级', '五年级', '六年级'];
					grades.forEach(function(grade) {
						const option = document.createElement('option');
						option.value = grade;
						option.textContent = grade;
						gradeSelect.appendChild(option);
					});
				} else if (selectedStage === '初中') {
					const grades = ['初一', '初二', '初三'];
					grades.forEach(function(grade) {
						const option = document.createElement('option');
						option.value = grade;
						option.textContent = grade;
						gradeSelect.appendChild(option);
					});
				} else if (selectedStage === '高中') {
					const grades = ['高一', '高二', '高三'];
					grades.forEach(function(grade) {
						const option = document.createElement('option');
						option.value = grade;
						option.textContent = grade;
						gradeSelect.appendChild(option);
					});
				} else if (selectedStage === '大学') {
					const grades = ['大一', '大二', '大三', '大四'];
					grades.forEach(function(grade) {
						const option = document.createElement('option');
						option.value = grade;
						option.textContent = grade;
						gradeSelect.appendChild(option);
					});
				}
			});
		</script>
		</form>
	</body>
</html>
